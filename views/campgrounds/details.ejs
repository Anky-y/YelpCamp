<% layout(`layouts/boilerplate`) %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= camp.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= camp.location %></li>
        <li class="list-group-item">$<%= camp.price %>/night</li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
        <form class="d-inline" action="/campgrounds/<%= camp._id %>/delete?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete CampGround</button>
        </form>
      </div>
      <footer class="card-footer d-flex justify-content-left"><p class="text-secondary mb-0">2 days ago</p></footer>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a review</h2>
    <form action="/campgrounds/<%= camp._id %>/review" method="POST" class="mb-3 validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please input a review</div>
      </div>
      <button class="btn btn-success">Add Review</button>
    </form>
    <% for(let review of camp.reviews) {%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <p class="card-text"><%= review.body %></p>
        <form action="/campgrounds/<%= camp._id %>/review/<%= review._id %>?_method=DELETE" method="POST"><button class="btn btn-sm btn-danger">Delete</button></form>
      </div>
    </div>
    <% } %>
  </div>
</div>
